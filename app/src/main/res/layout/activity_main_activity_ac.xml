<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="calculadoraac.facci.com.calculadoraac.MainActivityAC">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:weightSum="1">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:id="@+id/idresulta"
                android:hint="Resultado"
                android:gravity="center_vertical|center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:gravity="center">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7"
                        android:id="@+id/id7"
                        android:layout_marginRight="30dp"
                        android:onClick="siete" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:id="@+id/id8"
                        android:layout_marginRight="30dp"
                        android:onClick="ocho" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9"
                        android:id="@+id/id9"
                        android:onClick="nueve" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:id="@+id/id4"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="20dp"
                        android:onClick="cuatro" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:id="@+id/id5"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="20dp"
                        android:onClick="cinco" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:id="@+id/id6"
                        android:layout_marginTop="20dp"
                        android:onClick="seis" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" >

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:id="@+id/id1"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="20dp"
                        android:onClick="uno" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:id="@+id/id2"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="20dp"
                        android:onClick="dos" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:id="@+id/id3"
                        android:layout_marginTop="20dp"
                        android:onClick="tres" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:id="@+id/multiplicacion"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="20dp"
                        android:onClick="multiplicar" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/id0"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="20dp"
                        android:onClick="cero" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:id="@+id/suma"
                        android:layout_marginTop="20dp"
                        android:onClick="mas" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Acerca"
                        android:id="@+id/acerca"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:onClick="acerca"
                        android:nestedScrollingEnabled="false" />

                    <Button
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:text="="
                        android:id="@+id/igual"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:onClick="igual" />

                    <Button
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:id="@+id/resta"
                        android:layout_marginTop="20dp"
                        android:onClick="menos"
                        android:layout_marginRight="20dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AC"
                        android:id="@+id/borrar"
                        android:layout_marginTop="20dp"
                        android:onClick="borra" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
